@page
@model PcRepairShopManagementSystem.Areas.Identity.Pages.Store.AddComponentModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@{
    ViewData["Title"] = "Add New Component";
}

<div class="hero-box text-center">
    <h2>Add New Component</h2>
</div>

<div class="container my-5">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Name" class="form-control" placeholder="Name" />
            <label asp-for="Input.Name">Name</label>
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Category" class="form-control" placeholder="Category" />
            <label asp-for="Input.Category">Category</label>
            <span asp-validation-for="Input.Category" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <textarea asp-for="Input.Description"
                      class="form-control"
                      placeholder="Description"
                      style="height: 120px;"></textarea>
            <label asp-for="Input.Description">Description</label>
            <span asp-validation-for="Input.Description" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Price" type="number" step="0.01" class="form-control" placeholder="Price" />
            <label asp-for="Input.Price">Price</label>
            <span asp-validation-for="Input.Price" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.QuantityInStock" type="number" class="form-control" placeholder="Quantity In Stock" />
            <label asp-for="Input.QuantityInStock">Quantity In Stock</label>
            <span asp-validation-for="Input.QuantityInStock" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Manufacturer" class="form-control" placeholder="Manufacturer" />
            <label asp-for="Input.Manufacturer">Manufacturer</label>
            <span asp-validation-for="Input.Manufacturer" class="text-danger"></span>
        </div>

        <div class="form-floating mb-4">
            <input asp-for="Input.ImageUrl" class="form-control" placeholder="Image URL" />
            <label asp-for="Input.ImageUrl">Image URL</label>
            <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-sky btn-lg w-100">Add Component</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
